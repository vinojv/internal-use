<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/youtubevideoview"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/urlbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="URL"
        android:background="@drawable/url_round_btn"/>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView1"
        android:gravity="center">

        <EditText
            android:layout_width="430dp"
            android:layout_height="30dp"
            android:id="@+id/videourl"
            android:background="@drawable/circle_bg"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/videourl"
            android:layout_marginLeft="5dp"
            android:id="@+id/playbutton"
            android:background="@drawable/play"
            android:layout_alignBottom="@id/videourl"
            android:layout_toRightOf="@+id/videourl"/>

        <EditText
            android:layout_width="430dp"
            android:layout_height="30dp"
            android:id="@+id/msgbox"
            android:background="@drawable/circle_bg"
            android:hint="Your chat message here"
            android:layout_below="@+id/videourl"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/msgbox"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/playbutton"
            android:id="@+id/pausebutton"
            android:layout_alignBottom="@id/msgbox"
            android:background="@drawable/pause"
            android:layout_toRightOf="@+id/msgbox"/>
    </RelativeLayout>

</RelativeLayout>